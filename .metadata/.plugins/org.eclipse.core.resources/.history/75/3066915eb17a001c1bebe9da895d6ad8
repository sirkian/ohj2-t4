package taulukko;

import java.util.Scanner;

public class Tikkakisa {

	public static void main(String[] args) {
		
		int tikat = 5, i = 0;
		Scanner input = new Scanner(System.in);
		System.out.print("Montako osallistu tikkakisaan: ");
		int lkm = input.nextInt();
		
		int[] osallistujat = new int[lkm];
		int[] tulokset = new int [tikat];
		
		while (i < lkm) {
			System.out.print("Anna heittäjän " + (i+1) + " tikat (5): ");
			int tulos = input.nextInt();
			tulokset[i] = tulos;
		}
		System.out.println(tulokset);
	}

}

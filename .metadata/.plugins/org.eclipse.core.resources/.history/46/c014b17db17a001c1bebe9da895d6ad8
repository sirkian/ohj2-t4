package taulukko;

import java.util.Scanner;

public class Tikkakisa {

	public static void main(String[] args) {
		int lkm, heitto, summa;
		
		Scanner input = new Scanner(System.in);
		
		System.out.print("Montako osallistuu tikkakisaan: ");
		lkm = input.nextInt();
		
		int[] tulokset = new int[lkm];
		
		for (int i = 0; i < lkm; i++) {
			System.out.print("Anna heittäjän " + (i+1) + " tikat (5): ");
			summa = 0;
			for (int j = 0; j < 5; j++) {
				heitto = input.nextInt();
				summa = summa + heitto;
			}
			tulokset[i] = summa;
		}
		for (int i = 0; i < lkm; i++) {
			System.out.println("Heittäjän " + (i+1) + " tulos: " + tulokset[i]);
		}
	}

}

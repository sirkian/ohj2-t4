package kertaus;

import java.text.DecimalFormat;
import java.util.Scanner;

public class IIItoistorakenne {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		DecimalFormat desi = new DecimalFormat("0.00");
		double saasto = 3000;
		int vuosi = 0;
				
		System.out.print("Anna ilmal‰mpˆpumpun hinta: ");
		int hinta = input.nextInt();
		System.out.print("Anna s‰hkˆn hinta/kWh: ");
		double kwhHinta = input.nextInt();
		
		saasto = saasto * (kwhHinta / 100);
		
		while (hinta > saasto) {
			vuosi++;
			saasto = saasto + saasto;
			System.out.println(vuosi + ". s‰‰stetty " + desi.format(saasto));
		}
		
		System.out.println("Maksaminen kesti " + vuosi + " vuotta");
	}

}
